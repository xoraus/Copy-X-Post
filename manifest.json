{
  "manifest_version": 3,
  "name": "XtraCopy",
  "short_name": "XtraCopy",
  "description": "Simple, sleek, and directly implies copying posts to the clipboard.",
  "author": "@xoraus",
  "version": "1.0.0",
  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ],
      "js": [
        "app.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}